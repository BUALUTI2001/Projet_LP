<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>CRUD ETUDIANT</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">

    <div>
      <form class="d-flex" role="search">
          <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
  </div>
  <h3>OPERATION CRUD DANS LA TABLE ETUDIANT</h3>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nom</th>
          <th scope="col">Post Nom</th>
          <th scope="col">Prenom</th>
          <th scope="col">Statut</th>
          <th scope="col">sexe</th>
          <th scope="col">Inscription</th>
          <th scope="col">Promotion</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        
          <tr>
            <% students.forEach(student => { %>
            <th scope="row"><%= student.id %></th>
            <td><%= student.Nom %></td>
            <td><%= student.PostNom %></td>
            <td><%= student.Prenom %></td>
            <td><%= student.Statut %></td>
            <td><%= student.Sexe %></td>
            <td><%= student.InscriptionSpeciale %></td>
            <td><%= student.promotion %></td>
            <td>
              <a href="/admin/students/edit/<%= student.id %>" class="btn btn-primary btn-sm">Modifier</a>
              <a href="/admin/students/delete/<%= student.id %>" class="btn btn-danger btn-sm">Supprimer</a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
          <ul class="pagination">
              <li class="page-item"><a class="page-link" href="#">Previous</a></li>
              <li class="page-item"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item"><a class="page-link" href="#">3</a></li>
              <li class="page-item"><a class="page-link" href="#">Next</a></li> 
            </ul>
            
         <div class="d-flex">
            <span class="d-inline">
                <a class="btn btn-primary" href="">Telecharger Liste PDF</a>
            </span>
            <span class="d-inline">
              
            </span>
         </div>
        
      </div>
  </nav>
  </div>
</body>
</html>
